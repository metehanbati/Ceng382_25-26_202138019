@page
@model LabProject2.Pages.LoginPageModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container-fluid vh-100 d-flex align-items-center justify-content-center bg-light">
    <div class="row w-100 justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center py-4">
                    <h3 class="mb-0">
                        <i class="fas fa-user-lock me-2"></i>
                        Login to System
                    </h3>
                </div>
                <div class="card-body p-5">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            @Model.ErrorMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    
                    <form method="post">
                        <div class="mb-4">
                            <label asp-for="LoginData.Username" class="form-label fw-bold">
                                <i class="fas fa-user me-2"></i>Username
                            </label>
                            <input asp-for="LoginData.Username" class="form-control form-control-lg" 
                                   placeholder="Enter your username" />
                            <span asp-validation-for="LoginData.Username" class="text-danger small"></span>
                        </div>
                        
                        <div class="mb-4">
                            <label asp-for="LoginData.Password" class="form-label fw-bold">
                                <i class="fas fa-lock me-2"></i>Password
                            </label>
                            <input asp-for="LoginData.Password" type="password" class="form-control form-control-lg" 
                                   placeholder="Enter your password" />
                            <span asp-validation-for="LoginData.Password" class="text-danger small"></span>
                        </div>
                        
                        <div class="mb-4">
                            <div class="form-check">
                                <input asp-for="LoginData.RememberMe" class="form-check-input" />
                                <label asp-for="LoginData.RememberMe" class="form-check-label">
                                    Remember me for 30 minutes
                                </label>
                            </div>
                        </div>
                        
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-sign-in-alt me-2"></i>
                                Login
                            </button>
                        </div>
                    </form>
                    
                    <hr class="my-4">
                    
                    <div class="text-center">
                        <small class="text-muted">
                            <strong>Test Accounts:</strong><br>
                            admin/admin123 | user/user123 | manager/manager123
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}