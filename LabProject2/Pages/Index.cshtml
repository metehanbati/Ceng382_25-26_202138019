@page
@model IndexModel
@{
    ViewData["Title"] = "Class Information";
}

<div class="container mt-4">
    <h1 class="mb-4">Class Information Management</h1>
    
    <div class="row">
        <!-- Form Column -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    @(Model.IsEditing ? "Edit Class" : "Add New Class")
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="ClassInfo.ClassName" class="form-label"></label>
                            <input asp-for="ClassInfo.ClassName" class="form-control" />
                            <span asp-validation-for="ClassInfo.ClassName" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="ClassInfo.StudentCount" class="form-label"></label>
                            <input asp-for="ClassInfo.StudentCount" class="form-control" type="number" />
                            <span asp-validation-for="ClassInfo.StudentCount" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="ClassInfo.Description" class="form-label"></label>
                            <textarea asp-for="ClassInfo.Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="ClassInfo.Description" class="text-danger"></span>
                        </div>
                        
                        @if (Model.IsEditing)
                        {
                            <input type="hidden" asp-for="ClassInfo.Id" />
                            <button type="submit" class="btn btn-success" asp-page-handler="Update" asp-route-id="@Model.ClassInfo.Id">Update Class</button>
                            <a class="btn btn-secondary" asp-page="Index">Cancel</a>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-primary" asp-page-handler="Add">Add Class</button>
                        }
                    </form>
                </div>
            </div>
        </div>
        
        <!-- Table Column -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    Class List
                </div>
                <div class="card-body">
                    @if (Model.Classes.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Class Name</th>
                                        <th>Student Count</th>
                                        <th>Description</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Classes)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.ClassName</td>
                                            <td>@item.StudentCount</td>
                                            <td>@item.Description</td>
                                            <td>
                                                <a class="btn btn-sm btn-warning" asp-page="Index" asp-page-handler="Edit" asp-route-id="@item.Id">Edit</a>
                                                <a class="btn btn-sm btn-danger" asp-page="Index" asp-page-handler="Delete" asp-route-id="@item.Id"
                                                   onclick="return confirm('Are you sure you want to delete this class?')">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-center">No classes have been added yet.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}